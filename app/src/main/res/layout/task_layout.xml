<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/taskImageDisplay"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/taskTitleDisplay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="68dp"
        android:text="Title"
        app:layout_constraintBottom_toBottomOf="@+id/taskImageDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/taskImageDisplay"
        app:layout_constraintTop_toTopOf="@+id/taskImageDisplay"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/taskDescDisplay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="8dp"
        android:text="Description"
        app:layout_constraintBottom_toBottomOf="@+id/taskImageDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/taskImageDisplay"
        app:layout_constraintTop_toTopOf="@+id/taskImageDisplay" />

    <TextView
        android:id="@+id/taskLocnDisplay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:text="Location"
        app:layout_constraintBottom_toBottomOf="@+id/taskTitleDisplay"
        app:layout_constraintEnd_toEndOf="@+id/taskPrivateCheckBox"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/taskTitleDisplay"
        app:layout_constraintTop_toTopOf="@+id/taskTitleDisplay"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/taskLocnDisplay2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="18dp"
        android:text="Private?"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="@+id/taskImageDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/taskLocnDisplay"
        app:layout_constraintTop_toTopOf="@+id/taskImageDisplay"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/taskPrivateCheckBox"
        android:layout_width="29dp"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:checked="false"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toBottomOf="@+id/taskLocnDisplay2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/taskLocnDisplay"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>